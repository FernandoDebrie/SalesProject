
@model SalesWebMvc.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<div class="col-md-6">
    <form asp-action="Edit">
        <div class="form-group">
            <input type="hidden" asp-for="Seller.Id"/>
            <label asp-for="Seller.Name" class="control-label"></label>
            <input type="text" asp-for="Seller.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Seller.Email" class="control-label"></label>
            <input type="text" asp-for="Seller.Email" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Seller.BirthDate" class="control-label"></label>
            <input type="date" asp-for="Seller.BirthDate" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Seller.BaseSalary" class="control-label"></label>
            <input type="text" asp-for="Seller.BaseSalary" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Seller.DepartmentId" class="control-label"></label>
            <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name", Model.Seller.DepartmentId))" class="form-control"></select>
        </div>

        <div class="form-group">
            <input type="submit" value="Confirm" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </form>

</div>