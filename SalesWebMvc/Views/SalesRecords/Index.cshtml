
@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>

<ul class="nav nav-tabs">
    <li class="active"><a href="#home" data-toggle="tab">Simple Search</a></li>
    <li><a href="#profile" data-toggle="tab">Grouping Search</a></li>
  
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home">
        <br />
        <div class="row">
            <div class="col-md-6">
                <form class="form-horizontal" asp-action="SimpleSearch">
                    <div class="form-group">
                        <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-info">
                                Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="profile">
        <br />
        <div class="row">
            <div class="col-md-6">
                <form class="form-horizontal" asp-action="GroupingSearch">
                    <div class="form-group">
                        <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-info">
                               Grouping Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>   
</div>










